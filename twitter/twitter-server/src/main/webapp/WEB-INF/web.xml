<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <!-- Servlets -->
    <servlet>
        <servlet-name>tweetsServlet</servlet-name>
        <servlet-class>io.reinert.gwtsamples.twitter.service.TweetsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tweetsServlet</servlet-name>
        <url-pattern>/server/tweets/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>authServlet</servlet-name>
        <servlet-class>io.reinert.gwtsamples.twitter.service.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authServlet</servlet-name>
        <url-pattern>/server/auth/*</url-pattern>
    </servlet-mapping>

    <!-- Default page to serve -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
