<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel styleName="modal fade">
        <g:HTMLPanel styleName="modal-dialog">
            <g:HTMLPanel styleName="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">User Profile</h4>
                </div>
                <g:HTMLPanel styleName="modal-body">
                    <br/>
                    <g:FormPanel styleName="form-horizontal">
                        <g:HTMLPanel styleName="form-group">
                            <label class="col-sm-2 control-label">Username</label>
                            <g:FlowPanel styleName="col-sm-10">
                                <g:TextBox ui:field="userNameTextBox" styleName="form-control"/>
                            </g:FlowPanel>
                        </g:HTMLPanel>
                    </g:FormPanel>
                </g:HTMLPanel>
                <g:HTMLPanel styleName="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <g:Button ui:field="saveButton" styleName="btn btn-primary">Save changes</g:Button>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>